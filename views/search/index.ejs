<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/public/bootstrap.css" rel="stylesheet">
  <title>ikvarxt's blog</title>
</head>

<body>
  <div class="m-4">
    <h1 class="mb-4">Search Articles</h1>

    <a href="../" class="btn btn-success mb-4">All Articles</a>

    <form action="/search" method="post" class="row g-2">
      <div class="col-auto">
        <input required type="text" id="query" name="query" class="form-control" placeholder="full text search..." value="<%= locals.search || "" %>">
      </div>
      <div class="col-auto">
        <button type="submit" class="btn btn-primary">Search</button>
      </div>
    </form>

    <% if (articles.length == 0 && locals.search) { %>
    <h4 class="mt-4">No Result.</h4>
    <% } %>

    <% articles.forEach(article => { %>
    <div class="card mt-4">
      <div class="card-body">
        <%- include("../_blog_card", { article: article }) %>

        <a href="../articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
      </div>
    </div>
    <% }) %>
  </div>
</body>

</html>
