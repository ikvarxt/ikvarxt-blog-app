<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/public/bootstrap.css" rel="stylesheet">
  <title>ikvarxt's blog</title>
</head>

<body>
  <div class="m-4">
    <h1 class="mt-4 mb-4">Blog Articles</h1>

    <a href="/articles/new" class="btn btn-success mb-4">New Article</a>
    <a href="/search" class="btn btn-primary mb-4">Search</a>

    <% articles.forEach(article => { %>
    <div class="card mb-4">
      <div class="card-body">
        <%- include("../_blog_card", { article: article }) %>

        <a href="articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
        <form action="/articles/<%= article.id %>?_method=DELETE" method="post" class="d-inline">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
    <% }) %>
  </div>
</body>

</html>
