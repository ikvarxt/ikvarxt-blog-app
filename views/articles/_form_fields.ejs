<div class="form-group">
  <label for="title">Title</label>
  <input required type="text" id="title" name="title" value="<%= article.title %>" class="form-control">
</div>
<div class="form-group">
  <label for="description">Description</label>
  <textarea id="description" name="description" class="form-control"><%= article.description %></textarea>
</div>
<div class="form-group">
  <label for="markdown">Markdown</label>
  <textarea required id="markdown" name="markdown" class="form-control"><%= article.markdown %></textarea>
</div>
<div class="mt-3">
  <a href="/" class="btn btn-secondary">Cancel</a>
  <button type="submit" class="btn btn-primary">Save</button>
</div>
